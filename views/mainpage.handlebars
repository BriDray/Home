<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="row">
        <form class="col s12 new-item-form">
            <div class="row">
                <div class="input-field col s6">
                    <input id="category" type="text" class="validate">
                    <label for="category">Category</label>
                </div>
                <div class="input-field col s6">
                    <input id="item_name" type="text" class="validate">
                    <label for="item_name">Item Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="purchase_date" type="text" class="validate">
                    <label for="purchase_date">Purchase Date</label>
                </div>
                <div class="input-field col s6">
                    <input id="purchased_from" type="text" class="validate">
                    <label for="purchased_from">Purchased From</label>
                </div>
    
            </div>
            {{!-- <div class="row">
                <div class="input-field col s12">
                    <input id="serialNumber" type="text" class="validate">
                    <label for="serialNumber">Serial Number</label>
                </div> --}}
                <div class="row">
                    <div class="input-field col s12">
                        <input id="purchase_price" type="text" class="validate">
                        <label for="purchase_price">Item Cost When Purchased</label>
                    </div>
                    <div class="modal-footer">
                        <!-- ADD NEW ITEM BUTTON/CLOSE MODAL -->
                        <a href="#!" class=" modal-action modal-close waves-effect waves-light btn addItemBtn"
                            id="addItemBtn">Add Item</a>
                    </div>
                </div>
                {{!--
            </div> --}}
        </form>
    </div>
   
